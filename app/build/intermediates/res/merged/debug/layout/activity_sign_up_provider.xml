<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_up_provider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.happybot.vcoupon.activity.SignUpProviderActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp">

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_logo_white"
                android:id="@+id/imageView3"
                android:layout_gravity="center_horizontal"
                android:layout_width="90dp" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etEmailSU"
                android:layout_weight="1"
                android:hint="Địa chỉ Email"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_email"
                app:met_iconPadding="0dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:ems="10"
                android:id="@+id/etPasswordSU"
                android:layout_weight="1"
                android:hint="Mật khẩu"
                android:textAllCaps="false"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_password"
                app:met_iconPadding="0dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:ems="10"
                android:id="@+id/etNameSU"
                android:layout_weight="1"
                android:hint="Họ và tên"
                android:textAllCaps="false"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_username"
                app:met_iconPadding="0dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:ems="10"
                android:id="@+id/etPhoneSU"
                android:layout_weight="1"
                android:hint="Số điện thoại"
                android:textAllCaps="false"
                android:inputType="number"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_phone"
                app:met_iconPadding="0dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:ems="10"
                android:id="@+id/etAddressSU"
                android:layout_weight="1"
                android:hint="Địa chỉ"
                android:textAllCaps="false"
                android:inputType="text"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_address"
                app:met_iconPadding="0dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:ems="10"
                android:id="@+id/etWebsiteSU"
                android:layout_weight="1"
                android:hint="Website"
                android:textAllCaps="false"
                android:inputType="text"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_website"
                app:met_iconPadding="0dp"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="280dp"
                android:ems="10"
                android:id="@+id/etFacebookSU"
                android:layout_weight="1"
                android:hint="Facebook"
                android:textAllCaps="false"
                android:inputType="text"
                android:textSize="16sp"
                android:layout_height="110dp"
                app:met_iconLeft="@drawable/profile_glyph_facebook"
                app:met_iconPadding="0dp"/>

            <Button
                android:text="Đăng ký tài khoản"
                android:layout_width="match_parent"
                android:id="@+id/btnSignup"
                android:background="@drawable/border"
                android:textColor="@android:color/background_light"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
